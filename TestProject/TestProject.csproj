    <PropertyGroup>
        <_InternalHookGen_TaskAssembly>$(MSBuildThisFileDirectory)\..\InternalHookGen.MSBuild\bin\$(Configuration)\netstandard2.1\InternalHookGen.MSBuild.dll</_InternalHookGen_TaskAssembly>
