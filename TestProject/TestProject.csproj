    <ItemGroup>
        <ProjectReference Include="..\InternalHookGen.MSBuild\InternalHookGen.MSBuild.csproj" ReferenceOutputAssembly="false"/>
        <Compile Include="..\InternalHookGen.MSBuild\IgnoresAccessChecksToAttribute.cs"/>
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\TestLibrary\TestLibrary.csproj" ReferenceOutputAssembly="false"/>
        <Reference Include="..\TestLibrary\bin\$(Configuration)\netstandard2.0\TestLibrary.dll" HookGen="true"/>
    </ItemGroup>
